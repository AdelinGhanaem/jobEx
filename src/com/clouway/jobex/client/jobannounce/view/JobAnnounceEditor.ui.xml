<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:HTMLPanel>
    <div>
      Company: <g:TextBox ui:field="company" />
    </div>

    <div>
      Position: <g:TextBox ui:field="position" />
    </div>

    <div>
      Category: <g:TextBox ui:field="category" />
    </div>

    <div>
      <g:Button ui:field="cancel" text="Cancel" />
      <g:Button ui:field="announce" text="Announce" />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>